<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/layer_bg_home" >
	<ImageView 
		android:src="@drawable/about_bi"  
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="50dp"/>
	<LinearLayout 
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="24dp"
		android:layout_alignParentBottom="true"
		android:orientation="vertical">
		<TextView 
			android:id="@+id/activate_desc"
			android:text="@string/activate_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#482404"
			android:textSize="15sp"
			android:textStyle="bold"
			android:visibility="gone"
			/>
		<TextView 
			android:text="@string/activate_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#482404"
			android:textSize="15sp"
			android:textStyle="bold"
			/>
		<TextView 
			android:text="@string/activate_new_desc"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:textColor="#000000"
			android:textSize="11sp"
			/>
		<LinearLayout android:orientation="vertical" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="14dp"
			android:layout_marginBottom="22dp"
			android:layout_gravity="left">
			<Button
				android:layout_width="match_parent"  
				android:layout_height="wrap_content"
				android:id="@+id/activate_now"
				android:text="@string/activate_now"
				android:drawableLeft="@drawable/about_btn_accept"
				android:background="@drawable/about_btn"
				android:paddingLeft="18dp"
				android:paddingRight="18dp"
				android:textSize="18sp"
				android:textColor="#ffffff"
			/>
			
			<Button
				android:layout_width="match_parent" 
				android:layout_height="wrap_content"
				android:id="@+id/activate_later"
				android:text="@string/later"
				android:background="@drawable/about_btn"
				android:drawableLeft="@drawable/about_btn_cancel"
				android:paddingLeft="18dp"
				android:paddingRight="18dp"
				android:textSize="18sp"
				android:textColor="#ffffff"
			/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>

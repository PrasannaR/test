<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Small.Link" parent="@android:style/TextAppearance.Small">
    	<item name="android:textColor">#000000</item>
    	<item name="android:textColorLink">#0000ff</item>
    </style>
    
    <style name="TextAppearance.Small.Link.Bold" parent="@style/TextAppearance.Small.Link">
    	<item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.Small.Link.Bold.Secondary" parent="@android:style/TextAppearance.Small">
    	<item name="android:textColor">#bdbebd</item>
    	<item name="android:textColorLink">#bdbebd</item>
    	<item name="android:textStyle">bold</item>
    </style>
    
        <style name="about_label_style">
        <item name="android:layout_marginLeft">@dimen/margin_about_default</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#3b2111</item>
		<item name="android:textSize">11sp</item>
		<item name="android:shadowColor">#b29a8b</item>
		<item name="android:shadowRadius">0.75</item>
		<item name="android:shadowDy">1</item>
    </style>
    
    <style name="about_label_copyright_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorLink">#6ad7ff</item>
		<item name="android:textSize">12sp</item>
		<item name="android:shadowColor">#957561</item>
		<item name="android:shadowRadius">0.75</item>
		<item name="android:shadowDy">1</item>
		<item name="android:layout_marginLeft">@dimen/margin_about_default</item>
		<item name="android:layout_marginRight">@dimen/margin_about_default</item>
    </style>
    
    <style name="about_link_style">
		<item name="android:textSize">12sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#482404</item>
		<item name="android:background">@drawable/about_link_background</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:layout_marginLeft">2dp</item>
		<item name="android:layout_marginRight">2dp</item>
		<item name="android:shadowColor">#9f816f</item>
		<item name="android:shadowRadius">0.75</item>
		<item name="android:shadowDy">1</item>
	</style>
	
    <style name="about_lint_bullet_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#482404</item>
    </style>
</resources>

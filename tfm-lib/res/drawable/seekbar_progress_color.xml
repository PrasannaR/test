<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />
            <gradient
            	android:startColor="#FFC2C2C2"
                android:centerY="0.5"
                android:endColor="#FFC2C2C2"
                android:angle="270"
            />
        </shape>
    </item>
    
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient
                        android:startColor="#FFC2C2C2"
                        android:centerY="0.5"
                        android:endColor="#FFC2C2C2"
                        android:angle="270"
                />
            </shape>
        </clip>
    </item>
    
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient
                        android:startColor="#FF6CB1E6"
                        android:centerY="0.5"
                        android:endColor="#FF2274B3"
                        android:angle="270"
                />
            </shape>
        </clip>
    </item>
    
</layer-list>


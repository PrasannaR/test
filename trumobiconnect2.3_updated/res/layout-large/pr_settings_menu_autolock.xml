<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:filterTouchesWhenObscured="true" >
    
    	 <RelativeLayout
        android:id="@+id/pr_settings_screen_menu_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/pr_header_bg" >


    	     
    	     
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pr_settings_screen_menu_titlebar_icon"
            android:text="Auto lock"
            android:textColor="@color/COLOR_WHITE"
            android:textSize="20sp"
            android:padding="@dimen/padding"
            android:gravity="center_horizontal"
            android:textStyle="bold" 
            />
    </RelativeLayout>
    
 
     
    <ListView 
        android:id="@id/android:list"
        android:layout_width="match_parent"
  		android:layout_height="wrap_content" 
  		android:scrollingCache="false"
  		android:cacheColorHint="@color/COLOR_TRANSPARENT"  		/>
    

</LinearLayout>
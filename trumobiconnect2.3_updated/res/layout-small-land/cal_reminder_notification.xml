<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:filterTouchesWhenObscured="true"
    >

     <ImageView
         android:id="@+id/image_reminder_notification"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/pr_calendar_icon" />
     
           
     <TextView
            android:id="@+id/text_notification_content"
            android:layout_toRightOf="@+id/image_reminder_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Events (10)" />

     <LinearLayout
        android:id="@+id/reminder_notification_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/image_reminder_notification"
        android:layout_below="@+id/text_notification_content">
  
	    <Button
	        android:id="@+id/btn_snooze"
	        android:layout_width="wrap_content"
	        android:layout_weight="1"
	        android:layout_height="50dp"
	        android:gravity="center"
	        android:text="Snooze"
	         />

	    <Button
	        android:id="@+id/btn_dismiss"
	        android:layout_width="wrap_content"
	        android:layout_weight="1"
	        android:layout_height="50dp"
	        android:text="DismissAll" />
    
    </LinearLayout>


</RelativeLayout>
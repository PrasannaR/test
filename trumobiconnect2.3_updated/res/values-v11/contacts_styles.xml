<resources>

    <!-- API 11 theme customizations can go here. -->
    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="Contacts_AppTheme" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="dropDownListViewStyle">@style/DropDownListView</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
        <item name="actionOverflowButtonStyle">@style/widget.Overflow</item>
    </style>

    <style name="MyActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="background">@drawable/header_bg</item>
        <item name="android:background">@drawable/header_bg</item>
        <item name="height">@dimen/abs__action_bar_default_height</item>
        <item name="android:height">@dimen/abs__action_bar_default_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
        <!-- <item name="android:titleTextStyle">@style/ProjActionBar.TitleTextStyle</item> -->
    </style>

    <style name="widget.Overflow" parent="Widget.Sherlock.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/pr_overflow_icon</item>
    </style>

    <style name="DropDownListView" parent="Widget.Sherlock.ListView.DropDown">

        <!-- <item name="android:divider">@drawable/calendar_cel_selectl</item> -->
        <item name="android:listSelector">@drawable/cal_cel_selectl</item>
        <item name="android:divider">?android:attr/listDivider</item>
        <item name="android:background">#EFEFEF</item>
    </style>

    <!--
    <style name="DropDownNav" parent="Widget.Sherlock.Spinner.DropDown.ActionBar">
         <item name="android:background">@drawable/contacts_spinner_ab_default_stylingactionbar</item>
    </style> 
    -->

    <style name="PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/White</item>
        <item name="android:actionMenuTextAppearance">@color/Black</item>
    </style>

    <style name="Theme.stylingactionbar.widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/header_bg</item>
        <item name="android:titleTextStyle">@style/ProjActionBar.TitleTextStyle</item>
    </style>

    <style name="ProjActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
      <style name="Dialer_CustomDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>      
        <item name="android:divider">@null</item>
        <item name="android:buttonBarButtonStyle">@style/ButtonAppTheme</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/dialer_prefs_selector</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/cal_custom_radiobutton</item>
        <item name="android:listSeparatorTextViewStyle">@style/MyOwnListSeperatorTextViewStyle</item>
    </style>

</resources>
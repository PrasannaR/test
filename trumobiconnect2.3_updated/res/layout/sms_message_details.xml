<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
     
   
    <RelativeLayout 
        android:id="@+id/parentRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sms_listview_select"
        >
        <ImageView 
            android:id="@+id/contact_icon"
    		android:layout_width="60dip"
    		android:layout_height="60dip"
    		android:layout_alignParentLeft="true"
    		android:layout_centerVertical="true"
    		android:src="@drawable/sms_ic_contact_picture"      
        	android:filterTouchesWhenObscured="true" />

        <TextView
            android:id="@+id/contact_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/date"
            android:layout_toRightOf="@+id/contact_icon"
            android:paddingLeft="5dp"
            android:paddingTop="5dip"
            android:text="Contact Details"
            android:textColor="#000000"
            android:textSize="18sp"
            android:filterTouchesWhenObscured="true" >

        </TextView>
        <TextView
            android:id="@+id/unread_sms"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"         
            android:layout_toRightOf="@+id/contact_details"
            android:textColor="#000000"
            android:textSize= "13sp"    
            android:paddingLeft="5dp"
            android:paddingTop="5dip"
            android:filterTouchesWhenObscured="true">
        </TextView>
        <TextView
            android:id="@+id/message"
            android:layout_width="200dp"
    		android:layout_height="20dp"         
            android:layout_toRightOf="@+id/contact_icon"
            android:layout_below="@+id/contact_details"
            android:textColor="#777777"
            android:textSize= "14sp"
            android:text="helloooo"  
            android:paddingLeft="5dp" 
            android:paddingBottom="1dip"         
         	android:filterTouchesWhenObscured="true"></TextView>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/contact_details"
            android:paddingRight="10dp"
              android:textColor="#777777"
            android:text="Aug 5"
            android:paddingBottom="1dip"
            android:filterTouchesWhenObscured="true" >
		</TextView>                
      </RelativeLayout>
      <View android:background="#CECECE"
        android:layout_width="fill_parent"
        android:layout_height=".25dp"
        android:filterTouchesWhenObscured="true" />
</LinearLayout>

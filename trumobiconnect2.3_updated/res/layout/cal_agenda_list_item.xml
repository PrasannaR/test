<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agendalist_item2Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <View
        android:id="@+id/agenda_event_color"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cal_account_color"
        android:paddingLeft="10dp" />

    <ImageView
        android:id="@+id/agenda_view_event_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
         android:contentDescription="@string/img_desc"
        android:src="@drawable/cal_corporate_icon"
        android:filterTouchesWhenObscured="true" />

    <TextView
        android:id="@+id/txt_agenda_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/agenda_view_event_for"
        android:layout_toRightOf="@+id/agenda_event_color"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:text="EVENT"
        android:textColor="#333333"
        android:textStyle="bold"
        android:filterTouchesWhenObscured="true" />

    <TextView
        android:id="@+id/txt_agenda_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_agenda_event"
        android:layout_toLeftOf="@id/agenda_view_event_for"
        android:layout_toRightOf="@+id/agenda_event_color"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:text="01:02"
        android:textColor="#666666"
        android:filterTouchesWhenObscured="true" />

    <TextView
        android:id="@+id/txt_agenda_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_agenda_time"
        android:layout_toLeftOf="@id/agenda_view_event_for"
        android:layout_toRightOf="@+id/agenda_event_color"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:text="01:02"
        android:textColor="#666666"
        android:visibility="gone"
        android:filterTouchesWhenObscured="true" />

</RelativeLayout>
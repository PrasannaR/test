<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Framelay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical" >

    <TextView
        android:id="@+id/account_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/account_txt2"
        android:text="No Favorites." 
        android:gravity="center"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/account_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/holder"
        android:text="To create groups you need an account" 
        android:gravity="center"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/new_accoutn_bttn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Create a new contact" 
             android:gravity="center"/>

        <Button
            android:id="@+id/Signin_account_bttn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Sign in to an account" 
             android:gravity="center"/>

        <Button
            android:id="@+id/import_contact_bttn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Import contacts" 
             android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelay"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sms_bg_row"
    android:orientation="vertical" >


    	<ImageView
            android:id="@+id/contact_image"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/sms_ic_contact_picture"
            android:filterTouchesWhenObscured="true" />
    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contact_image"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="20dp"
        android:filterTouchesWhenObscured="true" >
    </TextView>
   
	<LinearLayout
    android:id="@+id/linear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/tvname"
    android:layout_toRightOf="@id/contact_image" >
    <TextView
        android:id="@+id/tvtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvname"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Phone Type"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold"
        android:filterTouchesWhenObscured="true" >
    </TextView>
    <TextView
        android:id="@+id/tvphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvname"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Phone no"
        android:textColor="#000000"
        android:textSize="14dp"
        android:filterTouchesWhenObscured="true" >
    </TextView>
</LinearLayout>

	<CheckBox
	    android:id="@+id/myCheckBox"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:background="@drawable/sms_customcheckbox_background"
	    android:button="@drawable/sms_customcheckbox"
	    android:clickable="false"
	    android:focusable="false"
	    android:filterTouchesWhenObscured="true" />

</RelativeLayout>
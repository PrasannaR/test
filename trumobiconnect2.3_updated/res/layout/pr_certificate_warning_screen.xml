<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/pr_bg"
    android:orientation="vertical" 
    android:filterTouchesWhenObscured="true">

    <RelativeLayout
        android:id="@+id/prRelativeImage"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/pr_header_bg" >

        <ImageView
            android:id="@+id/appIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/pr_connect_header_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/appIconImageView"
            android:text="@string/pr_app_name"
            android:textColor="@color/COLOR_WHITE"
            style="@style/personaLargeBoldFontStyle" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/certificateAlertTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/COLOR_WHITE"
        android:text="@string/certificate_warning_message"
        style="@style/personaLargeFontStyle" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/certificateAlertTextView"
        android:layout_below="@+id/certificateAlertTextView"
        android:layout_marginTop="14dp"
        android:background="@drawable/pr_button_background"
        android:text="@string/okButton"
        android:textColor="@color/COLOR_WHITE"
        android:textStyle="bold"
           android:textSize="16sp" />
      <!--   android:textAlignment="center" -->
     

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/agenda_past_days_bar_background_color"
    android:orientation="horizontal"
     >

    <TextView
        android:id="@+id/txt_week_hours"
        android:layout_width="25dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:background="@color/agenda_past_days_bar_background_color"
        android:textColor="#000000"
        android:textIsSelectable="false" />

    <LinearLayout
        android:id="@+id/week_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/darker_gray"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:filterTouchesWhenObscured="true" >

        <LinearLayout
            android:id="@+id/week_container_one"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingRight="2dp"
            android:textColor="#000000"
            android:filterTouchesWhenObscured="true" />

        <LinearLayout
            android:id="@+id/week_container_two"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingRight="2dp"
            android:textColor="#000000" 
            android:filterTouchesWhenObscured="true"/>

        <LinearLayout
            android:id="@+id/week_container_three"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingRight="2dp"
            android:textColor="#000000" 
            android:filterTouchesWhenObscured="true">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/week_container_four"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingRight="2dp"
            android:textColor="#000000"
            android:filterTouchesWhenObscured="true" />

        <LinearLayout
            android:id="@+id/week_container_five"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingRight="2dp"
            android:textColor="#000000" 
            android:filterTouchesWhenObscured="true"/>

        <LinearLayout
            android:id="@+id/week_container_six"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingRight="2dp"
            android:textColor="#000000"
            android:filterTouchesWhenObscured="true" />

        <LinearLayout
            android:id="@+id/week_container_seven"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingRight="2dp"
            android:textColor="#000000" 
            android:filterTouchesWhenObscured="true"/>
    </LinearLayout>

</LinearLayout>
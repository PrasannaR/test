<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#eeeeee"/>
    
    <TextView
        android:id="@+id/contact_primary_name_header"
        style="@style/ContactListSeparatorTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textColor="#ab0f1c"
        android:textStyle="bold" >

    </TextView>
    
    <FrameLayout 
        android:id="@+id/contact_imageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/contact_primary_name_header">
        <ImageView
            android:id="@+id/contact_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:scaleType="fitXY"
            android:contentDescription="@string/abs__action_mode_done"
            android:src="@drawable/contacts_ic_contact_picture_holo_light" />

        <ImageView
            android:id="@+id/profile_image_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:contentDescription="@string/abs__action_mode_done"
            android:src="@drawable/contacts_quickcontact_badge_overlay_normal_light" />
     </FrameLayout>
    
    <LinearLayout
        android:id="@+id/contact_txt_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/contact_imageLayout"
        android:layout_below="@+id/contact_primary_name_header"
        android:layout_marginTop="15dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contact_primary_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="2.07"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:textColor="@color/Black"
            android:text="sdfsadfsdfa"/>

        <TextView
            android:id="@+id/contact_sec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip" 
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:textColor="@color/Black"
            android:text="sdfsdfsadf"/>
    </LinearLayout>

    <TextView
        android:id="@+id/contact_prim_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contact_txt_holder"
        android:layout_below="@+id/contact_txt_holder"
        android:layout_marginLeft="15dp"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:textColor="@color/LightGrey"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/mobile_typeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/contact_prim_phone_no"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mobile_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" 
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

    </LinearLayout>
    
    <!-- <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile_header"
        android:cacheColorHint="#00000000"
        android:clickable="true"
        android:drawSelectorOnTop="false"
        android:listSelector="@drawable/listview_background"
        android:scrollbarStyle="outsideInset" /> -->
    
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/pr_panel_bg"
    android:filterTouchesWhenObscured="true" >>
    
    <RelativeLayout
        android:id="@+id/prRelativeImage"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/pr_header_bg">
       
	 <ImageView
            android:id="@+id/pr_bugsense_title_bar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/paddingBottomMin"
            android:src="@drawable/sms_home_icon"
            android:visibility="visible" />
	 
     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
              android:layout_centerHorizontal="true"
            android:id="@+id/pr_settings_bugsense_title"
            android:text="Bug Sense"
            android:textColor="@color/COLOR_WHITE"
            android:textSize="20sp"
            android:textStyle="bold" />
     </RelativeLayout>
     
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/prautoLockLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dip"
            android:layout_weight="0.5"
            android:paddingLeft="10dip"
            android:lineSpacingExtra="3dp"
            android:text="@string/prBugSenseTitle"
         	android:textColor="@color/COLOR_BLACK"
            android:textStyle="bold" />
        
         <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:id="@+id/pr_settings_screen_menu_bugsense"
            android:textColor="@color/COLOR_WHITE"
            android:textSize="20sp"
            android:textStyle="bold" />
     </LinearLayout>
    
</LinearLayout>
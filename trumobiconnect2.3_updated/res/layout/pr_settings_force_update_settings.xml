<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/pr_panel_bg"
    android:filterTouchesWhenObscured="true" >

    
     <RelativeLayout
        android:id="@+id/prSettingsForceUpdateHeader"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/pr_header_bg" >

        <ImageView
            android:id="@+id/pr_force_update_title_bar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/paddingBottomMin"
            android:src="@drawable/sms_home_icon"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
          android:layout_centerInParent="true"
             android:id="@+id/pr_settings_force_update_title"
            android:textSize="20sp"
            android:textColor="@color/COLOR_WHITE"
            android:text="@string/prUpdateSettings"
            android:textStyle="bold" />
    
    
    </RelativeLayout>
    
  
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prForceUpdateSettings"
            android:id="@+id/pr_settings_force_update_textview"
            android:textColor="@color/COLOR_BLACK"
            android:textSize="@dimen/LargeFontSize"
            android:layout_marginTop="10dip" 
            android:paddingLeft="@dimen/padding"
            android:background="@color/transparent"
            android:textStyle="bold"/>
        
       <View 
           android:layout_marginTop="6dip"
           android:background="@color/PR_DIALOG_DIVIDER_LINE_GREY_COLOR"
           android:layout_height="1dip"
           android:layout_width="match_parent"
           />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_focused="true">
    <shape>
        <gradient android:startColor="@color/message_list_item_back_color"
            android:centerColor="@color/message_list_item_back_color" android:endColor="@color/message_list_item_back_color"
            android:angle="270" android:centerX="0.5" android:centerY="0.5" />
        <stroke android:width="2dp" android:color="@color/edittext_bordercolor" />
        <corners android:radius="2dp" />
        <padding android:left="10dp" android:top="6dp" android:right="10dp"
            android:bottom="6dp" />
    </shape>
</item>
<item>
    <shape>
        <gradient android:startColor="@color/message_list_item_back_color"
            android:centerColor="@color/message_list_item_back_color" android:endColor="@color/message_list_item_back_color"
            android:angle="270" android:centerX="0.5" android:centerY="0.5" />
        <stroke android:width="1dp" android:color="@color/menu_option_color" />
        <corners android:radius="1dp" />
        <padding android:left="10dp" android:top="6dp" android:right="10dp"
            android:bottom="6dp" />
    </shape>
</item>
</selector>